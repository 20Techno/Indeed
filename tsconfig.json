{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ESNext"
    ],                         
    "module": "commonjs",                     
    "declarationMap": true,                
    "sourceMap": true,             
    "outDir": "./dist",                        
    "resolveJsonModule": true,
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*"
  ]
}
